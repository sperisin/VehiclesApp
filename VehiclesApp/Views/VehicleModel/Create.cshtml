@model VehiclesApp.MVC.Models.VehicleModelVM
@{
    ViewData["Title"] = "Create Vehicle Model";
}

<h1> @ViewData["Title"]</h1>
@using (Html.BeginForm("Create", "VehicleModel", FormMethod.Post,  new { id = "createVehicleModelForm" }))
{
    <div class="row">
        <div class="col-lg-2"> 
            Name:
        </div>
        <div class="col-lg-10">
            @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
        </div>
     </div>
     <br />
     <div class="row">
        <div class="col-lg-2"> 
            Abreviation:
        </div>
        <div class="col-lg-10">
            @Html.TextBoxFor(a => a.Abrv, new { @class = "form-control" })
        </div>
     </div>
    <div class="col-8 dropdown">
        <select class="form-control" asp-for="vehicleMakeId" id="vehicleMakeId" name="vehicleMakeId" data-val-required="The field is required.">
            <option value="0" selected disabled hidden>Choose vehicle make:</option>
            @for(int i = 0; i < Model.vehicleMakes.Count(); ++i)
            {
                <option value="@Model.vehicleMakes.ElementAt(i).Id">@Model.vehicleMakes.ElementAt(i).Name</option>
            }
        </select>
    </div>
     <br />
     <div class="row">
        <div class="col-lg-12"><input type="submit" value="Submit" class="btn btn-primary"> </div>
     </div>
}
